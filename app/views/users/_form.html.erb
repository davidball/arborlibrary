<div class="arborlibrary_form">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
	<legend>Enter User Details</legend>
	
	<div>
		<%= f.label :first %><br/>
		<%= f.text_field :first, :size => 25 %>
	</div>
	
	<div>
		<%= f.label :last %><br/>
		<%= f.text_field :last, :size => 25 %>
	</div>
	<div>
		<%= f.label :library_card %><br/>
		<%= f.text_field :library_card, :size => 25 %>
	</div>
	<div>
		<%= f.label :grade %><br/>
		<%= f.text_field :grade, :size => 25 %>
	</div>
	<div>
		<%= f.label :user_type %><br/>
		<%= f.text_field :user_type, :size => 25 %>
	</div>
	<div>
		<%= f.label :password, 'Password' %><br/>
		<%= f.password_field :password, :size => 25 %>
	</div>

	<div>
		<%= f.label :password_confirmation, 'Confirm' %><br/>
		<%= f.password_field :password_confirmation, :size => 25 %>
	</div>

	<div>
    	<%= f.submit %>
	</div>
  </fieldset>
<% end %>
</div>
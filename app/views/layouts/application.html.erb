<input type="button" value="Main Menu" onclick="window.open('/admin', '_self','width=100%');"><br/>
<% end %>
</div>

<head>
  <title><%= @title ? @title + ' - ' : '' %>Arbor School of Arts and Sciences</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

</body>
</html>
